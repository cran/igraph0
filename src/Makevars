PKG_CPPFLAGS=-DNDEBUG -g -O2 -I/usr/include/libxml2
PKG_CFLAGS=-DUSING_R -I. -g -O2 -I/usr/include/libxml2 \
        -DPACKAGE_VERSION=\"0.5.5\" \
	-DINTERNAL_ARPACK -DINTERNAL_LAPACK \
	-DINTERNAL_BLAS -DNDEBUG $(CFLAGS)
PKG_CXXFLAGS= -DUSING_R -DNDEBUG
PKG_LIBS=-lxml2 -lz -lpthread -licucore -lm -lgmp

all: $(SHLIB)

dlamch.o : dlamch.c
	$(CC) $(R_XTRA_FFLAGS) $(PKG_CFLAGS) \
	$(FPICFLAGS) $(SHLIB_CFLAGS) $(SAFE_FFLAGS) $(CFLAGS) -c $<
